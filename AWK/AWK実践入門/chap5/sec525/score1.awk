    score_all = "S A B C X";
    score_num = split(score_all, score_list);    # 添字は0からになる
    ##----  科目情報
    subj_all = "国語 数学 英語 理科 社会 音楽";
    subj_num = split(subj_all, subj_list);    # 添字は1からになる
}

##--------------------------------------------------------------------
##  本体処理
##--------------------------------------------------------------------

{
    stud[$1] = 1;           # 学生の出現
    stud_score[$1,$3]++;    # 学生ごとの成績の集計
    subj_score[$2,$3]++;    # 科目ごとの成績の集計
