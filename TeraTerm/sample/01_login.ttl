;; ユーザ名／パスワード設定 
USERNAME = 'control' 
PASSWORD = 'taniken84' 
;============================================ 
;; コマンド組立て 
COMMAND = '192.168.11.16'
strconcat COMMAND ':22 /ssh /2 /auth=password /user=' 
strconcat COMMAND USERNAME 
strconcat COMMAND ' /passwd=' 
strconcat COMMAND PASSWORD


;; 接続 
connect COMMAND
settitle 'RaspberryPi 3B+'

wait '$'

;; マクロ終了 
end
