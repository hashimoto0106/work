;=====================================================================
; 接続情報
HOSTADDR = '192.168.11.16'
USERNAME = 'control'
PASSWORD = 'taniken84'
WINDOW_TITLE = 'log test'
;=====================================================================

; コマンドオプション組立て
COMMAND = HOSTADDR
strconcat COMMAND ':22 /ssh /2 /auth=password /user='
strconcat COMMAND USERNAME
strconcat COMMAND ' /passwd='
strconcat COMMAND PASSWORD

; 接続
connect COMMAND

; ウインドウタイト
settitle WINDOW_TITLE

; Log
getdir logfile
strconcat logfile '\'
strconcat logfile USERNAME
strconcat logfile '@'
strconcat logfile HOSTADDR
getdate datetime '-%Y%m%d-%H%M%S'
strconcat logfile datetime
strconcat logfile '.log'
; messagebox logfile '確認' ;生成したログファイルパスの確認
logautoclosemode 0
logopen logfile 0 1

wait '$' '#'

sendln 'ls'

end