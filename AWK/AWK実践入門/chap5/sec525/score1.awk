##  事後処理
##--------------------------------------------------------------------

END {
    ##--  学生ごとの成績分布
    print "学生ごとの成績分布";
    print "     : " score_all;
    for ( st in stud ) {
        printf st " : ";
        for ( k = 1; k <= score_num; k++ ) {
          sc = score_list[k];
          printf stud_score[st,sc]+0 " ";
        }
        print "";
    }
    print "";

    ##--  科目ごとの成績分布
    print "科目ごとの成績分布";
    print "     : " score_all;
    for ( s = 1; s <= subj_num; s++ ) {    # 添字の範囲に注意
        sb = subj_list[s];
        printf sb " : ";
        for ( k = 0; k < score_num; k++ ) {
            sc = score_list[k];
            printf subj_score[sb,sc]+0 " ";
        }
        print "";
    }

}
